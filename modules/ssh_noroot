ssh_noroot{
log "${BLUE}Setting 'PermitRootLogin no' in /etc/ssh/sshd_config ${NC}"
sed -i 's/PermitRootLogin yes/PermitRootLogin no/g' /etc/ssh/sshd_config

#Check if it was successful
grep "PermitRootLogin no" /etc/ssh/sshd_config

if [ $? -ne 0 ]; then
    echo "${RED}Failed to disable root SSH login${NC}"
    echo "Failed to disable root SSH login" > report.txt
else
    echo "${GREEN}Successfully disabled root SSH login${NC}" 
    echo "Successfully disabled root SSH login" > report.txt
fi
}