disable_sftp_and_scp() {
    log "${BLUE}Disabling SFTP and SCP.${NC}"

    # Backup the sshd_config file
    cp /etc/ssh/sshd_config /etc/ssh/sshd_config_backup >> "$LOG_FILE" 2>&1

    # Disable SFTP and SCP by appending configuration to the sshd_config file
    echo -e "\n# Disable SFTP and SCP\n" >> /etc/ssh/sshd_config
    echo "Subsystem sftp /bin/false" >> /etc/ssh/sshd_config
    echo "PermitSCP no" >> /etc/ssh/sshd_config

    log "${BLUE}Disabling SFTP and SCP: ${GREEN}DONE${NC}"
    echo -e "${BLUE}Disabling SFTP and SCP: ${GREEN}DONE${NC}" >> report.txt
}

