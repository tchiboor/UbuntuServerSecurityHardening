remove_nc() {
    log "${BLUE}Removing nc ${NC}"
    # Check if nc is installed
    if [ -x "$(command -v nc)" ]; then
        # Uninstall nc
        apt-get remove --purge -y netcat >> "$LOG_FILE" 2>&1
        log "Netcat (nc) has been removed."
        log "${BLUE}Removing nc: ${GREEN}DONE${NC}"
    echo -e "${BLUE}Removing nc: ${GREEN}DONE${NC}" >> report.txt
    else
        log "Netcat (nc) is not installed."
    fi
}


